<p id="notice"><%= notice %></p>
<br>
<h1>Listing Vehicles</h1>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Vin</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Engine type</th>
      <th>License plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vin %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.modle %></td>
        <td><%= vehicle.engine_type %></td>
        <td><%= vehicle.license_plate %></td>
        <td><%= link_to 'Show', vehicle, class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete,class:"btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

